<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <div class="card log-reg-card">
        <div class="card-body">
          <h2 class="card-title text-center fw-bold">Register</h2>
          <h6 class="text-muted text-center">Create your account</h6>
          <form action="/register" method="POST" class="mt-4" autocomplete="off">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= locals.prevData ? prevData.name:null %>" autocomplete="off" required />
            </div>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" value="<%= locals.prevData ? prevData.username:null %>" autocomplete="off" required />
              <div id="usernameHelp" class="form-text text-danger"><% errors.forEach(error => { %> <% if(error.param === "username") {%> <%= error.msg %><% } %> <% }) %></div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= locals.prevData ? prevData.email:null %>" autocomplete="off" required />
              <div id="emailHelp" class="form-text text-danger"><% errors.forEach(error => { %> <% if(error.param === "email") {%> <%= error.msg %> <% } %> <% }) %></div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required />
              <div id="passwordHelp" class="form-text text-danger"><% errors.forEach(error => { %> <% if(error.param === "password") {%> <%= error.msg %><% } %> <% }) %></div>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary mt-3">Register</button>
              <div class="mx-auto mt-2">Already have an account? <a href="/login">login</a></div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
