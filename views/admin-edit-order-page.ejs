<div class="container mt-5">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body" style="font-size: 1.1em">
          <h3>Order Detail</h3>
          <hr />
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">Id</label>
            </div>
            <div class="col">
              <div><%= order.id %></div>
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">Username</label>
            </div>
            <div class="col">
              <div><%= order.username %></div>
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">Products</label>
            </div>
            <div class="col">
              <div><% (order.products).forEach(product => { %> <%= product.name %>; <% }) %></div>
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">User Phone</label>
            </div>
            <div class="col">
              <div><% (order.userinfo).forEach(userinfo => { %> <%= userinfo.phone %> <% }) %></div>
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">User Address</label>
            </div>
            <div class="col">
              <div><% (order.userinfo).forEach(userinfo => { %> <%= userinfo.address %> <% }) %></div>
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">Delivery Option</label>
            </div>
            <div class="col">
              <div><%= order.deliveryOption %></div>
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">Timestamp</label>
            </div>
            <div class="col">
              <div><%= order.timestamp %></div>
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">Payment Method</label>
            </div>
            <div class="col">
              <div><%= order.paymentMethod %></div>
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">Payment Status</label>
            </div>
            <div class="col">
              <div><%= order.paymentStatus %></div>
            </div>
          </div>
          <form action="/admin-edit?_method=PUT" method="POST">
          <input type="hidden" value="<%= order.id %>" name="id">
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">Product Ready Status</label>
            </div>
            <div class="col">
              <select class="form-select" aria-label="Default select example" name="productReadyStatus">
                <option value="true" <% if(order.productReadyStatus === true){ %><%= "selected" %><% } %>>True</option>
                <option value="false" <% if(order.productReadyStatus === false){ %><%= "selected" %><% } %>>False</option>
              </select>
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-md-2">
              <label for="inputPassword6" class="col-form-label fw-bold">deliveredStatus</label>
            </div>
            <div class="col">
              <select class="form-select" aria-label="Default select example" name="deliveredStatus">
                <option value="true" <% if(order.deliveredStatus === true){ %><%= "selected" %><% } %>>True</option>
                <option value="false" <% if(order.deliveredStatus === false){ %><%= "selected" %><% } %>>False</option>
              </select>
            </div>
          </div>
          <div class="row align-items-center mt-3">
            <div class="col d-grid">
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </div>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>
